<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--这里是Linearlayout布局的背景颜色-->
    <solid android:color="#FFB86E" />
    <!--这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="0.dp"/>

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!--角的话，里边有参数可以单独设置-->
    <corners android:radius="10dp" />

    <!--实现应用背景颜色渐变-->
    <gradient
        android:startColor="#FFBA6F"
        android:endColor="#FF9D3A"
        android:angle="0"/>

</shape>